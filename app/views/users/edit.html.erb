<%provide(:title, "ユーザー設定") %>
<h1>プロフィールを更新する</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages' %>

			<%= f.label :name %>
			<%= f.text_field :name %>


			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.label :password_confirmation, "パスワードの確認" %>
			<%= f.password_field :password_confirmation %>

			<%= f.submit "変更を保存する", class: "btn btn-large btn-primary" %>

		<% end %>

		<%= gravatar_for @user %>
		<a href="http://gravatar.com/emails">画像の変更</a>
	</div>
</div>	