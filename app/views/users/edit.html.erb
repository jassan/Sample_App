<% provide(:title, "ユーザー設定") %>
<h1>プロフィールを更新する</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>

			<%= render 'fields', f: f %>
			<%= f.submit "変更を保存する", class: "btn btn-large btn-primary" %>

		<% end %>

		<%= gravatar_for(@user) %>
		<%= link_to "画像の変更", "http://gravatar.com/emails", target: ["_blank"] %>
	</div>
</div>	